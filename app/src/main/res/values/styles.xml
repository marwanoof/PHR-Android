<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textViewStyle">@style/SkyTextViewStyle</item>
        <item name="android:searchViewStyle">@style/SkySearchViewStyle</item>
<!--        <item name="android:spinnerDropDownItemStyle">@style/SkySpinnerStyle</item>-->
<!--        <item name="android:button">@style/SkyBottonStyle</item>-->
    </style>

    <style name="SkyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/sky</item>
    </style>

    <style name="SkySpinnerStyle" parent="android:Widget.Spinner.DropDown">
        <item name="android:fontFamily">@font/sky</item>
        <item name="android:spinnerDropDownItemStyle">@android:style/Widget.Material.Light.Spinner.Underlined</item>
    </style>

    <style name="SkySearchViewStyle" parent="android:Widget.Material.SearchView">
        <item name="android:fontFamily">@font/sky</item>
    </style>

    <style name="SkyBottonStyle" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/sky</item>
    </style>
    <style name="SkyFont" parent="android:Widget.Toolbar.Button.Navigation">
        <item name="android:fontFamily">@font/sky</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/SkyTextViewStyle</item>
<!--        <item name="android:button">@style/SkyBottonStyle</item>-->
        <item name="android:negativeButtonText">@style/SkyFont</item>
    </style>


    <!-- MyProgressDialog custom style-->
    <style name="MyProgressTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- custom style for progressDialog-->
    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>

    <!--side menu -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorRed</item>
    </style>
<!-- tab layouts style -->
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

</resources>
