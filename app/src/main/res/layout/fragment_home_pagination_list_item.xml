<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_120"
    android:layout_marginStart="@dimen/space_8"
    android:layout_marginTop="@dimen/space_16"
    android:layout_marginEnd="@dimen/space_8"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ib_icon"
            android:layout_width="@dimen/space_32"
            android:layout_height="@dimen/space_32"
            android:layout_marginTop="@dimen/space_32"
            android:layout_marginBottom="@dimen/space_4"
            android:backgroundTint="@color/colorWhite"
            android:contentDescription="@string/title_select_institute"
            app:layout_constraintBottom_toTopOf="@+id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside"
            app:srcCompat="@drawable/immunization" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_4"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginEnd="@dimen/space_4"
            android:layout_marginBottom="@dimen/space_16"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/title_procedures_reports"
            android:textAlignment="center"
            android:textColor="@color/colorTextViewFontNormal"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ib_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>