<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="104dp"
    android:id="@+id/clBodyMeasurementItem">

    <View
        android:id="@+id/v_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_96"
        android:layout_margin="@dimen/space_16"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/shape_rect_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:fontFamily="@font/roboto_regular"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="@+id/v_container"
        app:layout_constraintTop_toTopOf="@+id/v_container" />

    <TextView
        android:fontFamily="@font/roboto_regular"
        android:id="@+id/tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:padding="@dimen/space_0"
        android:textColor="@color/colorWhite"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/v_container"
        app:layout_constraintEnd_toStartOf="@+id/tv_unit"
        app:layout_constraintTop_toTopOf="@+id/v_container" />

    <TextView
        android:fontFamily="@font/roboto_regular"
        android:id="@+id/tv_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/tv_value"
        app:layout_constraintEnd_toEndOf="@+id/v_container" />


</androidx.constraintlayout.widget.ConstraintLayout>