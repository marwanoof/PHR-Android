<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cl_orderItem">

    <TextView
        android:id="@+id/tv_procName"
        android:layout_width="@dimen/space_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_16"
        android:padding="@dimen/space_10"
        android:textDirection="locale"
        android:fontFamily="@font/roboto_regular"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toStartOf="@+id/tv_orderDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_10"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginBottom="@dimen/space_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_procName"
        app:layout_constraintTop_toBottomOf="@id/tv_procName" />

    <TextView
        android:id="@+id/tv_orderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/imgArrowDetailsSelf"
        app:layout_constraintTop_toTopOf="@id/tv_procName"
        android:padding="@dimen/space_8"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="@dimen/space_2" />
    <TextView
        android:id="@+id/tv_estName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintTop_toTopOf="@id/tv_status"
        app:layout_constraintStart_toStartOf="@id/tv_orderDate"
        app:layout_constraintEnd_toEndOf="@id/tv_orderDate"
        app:layout_constraintTop_toBottomOf="@id/tv_orderDate"/>
    <ImageButton
        android:id="@+id/imgArrowDetailsSelf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_keyboard_arrow_next" />
</androidx.constraintlayout.widget.ConstraintLayout>