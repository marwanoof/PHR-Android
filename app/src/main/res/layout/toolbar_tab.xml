<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tb_toolbar_simple"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_56"
    android:background="@color/colorGray"
    android:contentInsetStart="@dimen/space_0"
    android:contentInsetLeft="@dimen/space_0"
    android:contentInsetEnd="@dimen/space_0"
    android:contentInsetRight="@dimen/space_0"
    android:elevation="@dimen/space_0"
    app:contentInsetEnd="@dimen/space_0"
    app:contentInsetLeft="@dimen/space_0"
    app:contentInsetRight="@dimen/space_0"
    app:contentInsetStart="@dimen/space_0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/space_0"
        android:padding="@dimen/space_0">

        <ImageButton
            android:id="@+id/ib_toolbar_back_button"
            android:layout_width="@dimen/space_40"
            android:layout_height="@dimen/space_40"
            android:backgroundTint="@color/colorStatusBar"
            android:contentDescription="@string/img_desc_back_icon"
            android:tint="@color/colorRed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="@dimen/space_0"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/title_home"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ib_toolbar_back_button"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="@dimen/space_0"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@id/addDoc"
            app:layout_constraintStart_toEndOf="@id/tv_toolbar_title"
            app:layout_constraintTop_toTopOf="parent"
            android:weightSum="2">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                style="@style/MyCustomTabLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"></com.google.android.material.tabs.TabLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/addDoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:padding="@dimen/space_8"
            android:text="+"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/text_size_32sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.Toolbar>