<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_16"
    android:id="@+id/cl_friendItem">

    <ImageView
        android:id="@+id/iv_userImage"
        android:layout_width="@dimen/space_56"
        android:layout_height="@dimen/space_56"
        android:src="@drawable/user_profile_ic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_CreatedName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_32"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toEndOf="@id/iv_userImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_CreatedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_32"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_userImage" />

    <Button
        android:id="@+id/tv_unReadCount"
        android:layout_width="@dimen/space_24"
        android:layout_height="@dimen/space_24"
        android:layout_margin="@dimen/space_16"
        android:background="@drawable/bg_circle"
        android:fontFamily="@font/roboto_regular"
        android:backgroundTint="@color/colorBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>